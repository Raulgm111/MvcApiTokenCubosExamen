@if (Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-danger"
       asp-controller="Cubos"
       asp-action="Perfil">
            Mi Perfil
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-danger"
       asp-controller="Cubos"
       asp-action="GetPedidos">
            Ver Pedidos
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-danger"
       asp-controller="Managed"
       asp-action="Logout">
            Log Out
